# ARVIPOA Production Environment Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://arvipoa_user:secure_password@localhost:5432/arvipoa_production

# Firebase Configuration (Production)
VITE_FIREBASE_API_KEY=your_production_firebase_api_key
VITE_FIREBASE_PROJECT_ID=arvipoa-438e3
VITE_FIREBASE_APP_ID=your_production_firebase_app_id

# Google Maps API
VITE_GOOGLE_MAPS_API_KEY=your_production_google_maps_api_key

# OpenAI Configuration
OPENAI_API_KEY=your_production_openai_api_key

# Security Settings
SESSION_SECRET=your_super_secure_session_secret_for_production
JWT_SECRET=your_jwt_secret_for_production

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/arvipoa.org.crt
SSL_KEY_PATH=/etc/ssl/private/arvipoa.org.key

# Performance Settings
MAX_UPLOAD_SIZE=50mb
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=15

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/arvipoa/app.log